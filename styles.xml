<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Header">
        <item name="android:paddingTop">@dimen/main_padding</item>
        <item name="android:paddingLeft">@dimen/main_padding</item>
        <item name="android:paddingBottom">@dimen/main_padding</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Price">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:paddingLeft">@dimen/main_padding</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Quantity">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginLeft">@dimen/main_padding</item>
        <item name="android:layout_marginTop">@dimen/main_padding</item>
    </style>

    <style name="DecrementButton">
        <item name="android:layout_marginLeft">@dimen/main_padding</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="IncrementButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_marginLeft">@dimen/main_padding</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:paddingLeft">24dp</item> //adds padding between checkbox and text
    </style>
</resources>
